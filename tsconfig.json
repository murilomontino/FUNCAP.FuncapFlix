{
	"compilerOptions": {
		"baseUrl": "./source",
		"paths": {
			"global": [
				"./source/global/*"
			],
			"screens": [
				"./source/screens/*"
			],
			"navigations": [
				"./source/navigations/*"
			]
		},
		"jsx": "react-native",
		"target": "ES2020",
		"module": "CommonJS",
		"lib": [
			"es2020"
		],
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"babel.config.ts",
		"metro.config.ts",
		"jest.config.js"
	],
	"extends": "expo/tsconfig.base",
	"rules": [
		{
			"react/prop-types": 0
		}
	]
}